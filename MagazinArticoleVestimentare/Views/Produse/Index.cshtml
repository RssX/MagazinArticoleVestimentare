@*Define model*@

@model IEnumerable<Produse>

@*Define ViewData*@

@{
    ViewData["Title"] = "Lista produselor";
}

@*Pagina*@
<h1>Produse</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Nume

                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImagineProdusUrle" width="100%" alt="@item.Nume">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">

                            <p class="card-text"><b>Marime:</b> @item.Marime</p>
                            <p class="card-text"><b>Pret:</b> @item.Pret$</p>
                            <p class="card-text"><b>Categoria: </b> @item.CategorieProdus</p>
                            <p class="card-text"><b>End Date: </b>a</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (item.CantitateInStoc > 3)
                                {
                                    <span class="badge bg-success text-white">In stoc</span>
                                }
                                else if (item.CantitateInStoc <= 3 && item.CantitateInStoc > 0)
                                {
                                    <span class="badge bg-primary text-white">Stoc limitat</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-white">Stoc epuizat</span>
                                }
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"  asp-action="Detalii" asp-route-id="@item.ProdusId" >
                                    <i class="bi bi-eye-fill"></i> Detalii
                                </a>
                                <a class="btn btn-success text-white">
                                    <i class="bi bi-cart-plus"></i> Add to Carts @item.Pret.ToString("c")
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div style="position:fixed; right:25px; left:25px;" class="text-white">
    <a asp-controller="Produse" asp-action="Create" class="btn btn-dark">
        <i class="bi bi-plus-circle"></i> Adaugă produs </a>
</div>